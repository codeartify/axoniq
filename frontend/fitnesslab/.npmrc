# Use the public npm registry
registry=https://registry.npmjs.org/

# Per-user global install location (adjust if you prefer a different folder)
prefix=${HOME}/.npm-global

# Optional: cache directory (improves performance; safe to omit)
cache=${HOME}/.npm-cache

# Optional: do not require auth for the public registry
always-auth=false

# If behind a proxy, uncomment and set these:
# proxy=http://user:pass@proxy.example.com:8080
# https-proxy=http://user:pass@proxy.example.com:8080
