{
  "realm": "fitnesslab",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "accessTokenLifespan": 3600,
  "accessCodeLifespan": 60,
  "roles": {
    "realm": [
      {
        "name": "ADMIN",
        "description": "Administrator role with full access"
      },
      {
        "name": "TRAINER",
        "description": "Trainer role with access to manage customers and products"
      },
      {
        "name": "MEMBER",
        "description": "Member role with limited access"
      }
    ]
  },
  "users": [
    {
      "username": "admin",
      "enabled": true,
      "email": "admin@fitnesslab.ch",
      "firstName": "Admin",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "admin123",
          "temporary": false
        }
      ],
      "realmRoles": ["ADMIN"]
    },
    {
      "username": "trainer",
      "enabled": true,
      "email": "trainer@fitnesslab.ch",
      "firstName": "Trainer",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "trainer123",
          "temporary": false
        }
      ],
      "realmRoles": ["TRAINER"]
    },
    {
      "username": "member",
      "enabled": true,
      "email": "member@fitnesslab.ch",
      "firstName": "Member",
      "lastName": "User",
      "emailVerified": true,
      "credentials": [
        {
          "type": "password",
          "value": "member123",
          "temporary": false
        }
      ],
      "realmRoles": ["MEMBER"]
    }
  ],
  "clients": [
    {
      "clientId": "fitnesslab-app",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "http://localhost:4200/*",
        "http://localhost:8081/*"
      ],
      "webOrigins": [
        "http://localhost:4200",
        "http://localhost:8081",
        "+"
      ],
      "directAccessGrantsEnabled": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "3600"
      }
    }
  ]
}
